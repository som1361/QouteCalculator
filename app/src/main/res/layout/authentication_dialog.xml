<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


    <TextView
            android:text="Money Me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/lable_textview" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="159dp" android:layout_marginRight="159dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="186dp"
            android:layout_marginStart="186dp" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="I'm new here"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_user_lable"
            tools:layout_editor_absoluteY="70dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="156dp" android:layout_marginRight="156dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.981"/>
    <Button
            android:text="Start Application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/application_btn"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/new_user_lable" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="115dp" android:layout_marginRight="115dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="134dp"
            android:layout_marginStart="134dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="I already have an account"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="135dp" android:id="@+id/member_lable" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/application_btn"/>
    <Button
            android:text="Members Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.532"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/member_lable"/>
</android.support.constraint.ConstraintLayout>
